+
+	heap = ion_unmapped_heap_create(&unmapped_data);
+	if (IS_ERR(heap))
+		return PTR_ERR(heap);
+
+	heap->name = "unmapped";
+
+	ion_device_add_heap(heap);
+	return 0;
 }
