+
+#include "fsl-imx8mm-evk.dts"
+
+&resmem {
+	display_region: display {
+		compatible = "imx-secure-ion-pool";
+		reg = <0x0 0xce000000 0 0x30000000>;
+	};
+
+	optee_region: optee {
+		compatible = "imx-secure-ion-pool";
+		reg = <0x0 0xcc000000 0 0x02000000>;
+	};
+};
+
+&imx_ion {
+	compatible = "fsl,mxc-ion", "linux,ion";
+
+	ion-display-region {
+		compatible = "fsl,display-heap", "linux,ion-heap-unmapped";
+		memory-region = <&display_region>;
+	};
+
+	ion-optee-region {
+		compatible = "fsl,optee-heap", "linux,ion-heap-unmapped";
+		memory-region = <&optee_region>;
+	};
+};
diff --git a/arch/arm64/boot/dts/freescale/fsl-imx8mm.dtsi b/arch/arm64/boot/dts/freescale/fsl-imx8mm.dtsi
index 4ca9cf0..0807a5e 100644
--- a/arch/arm64/boot/dts/freescale/fsl-imx8mm.dtsi
+++ b/arch/arm64/boot/dts/freescale/fsl-imx8mm.dtsi
@@ -70,7 +70,7 @@
 		reg = <0x0 0x40000000 0 0x80000000>;
 	};
 
-	reserved-memory {
+	resmem: reserved-memory {
 		#address-cells = <2>;
 		#size-cells = <2>;
 		ranges;
@@ -981,7 +981,7 @@
 		only-dma-mask32 = <1>;
 	};
 
-	imx_ion {
+	imx_ion: imx_ion {
 		compatible = "fsl,mxc-ion";
 		fsl,heap-id = <0>;
 	};
