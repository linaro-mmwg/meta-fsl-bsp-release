 arch/arm64/boot/dts/freescale/Makefile             |  1 +
 .../boot/dts/freescale/fsl-imx8mm-evk-drm.dts      | 41 ++++++++++++++++++++++
 arch/arm64/boot/dts/freescale/fsl-imx8mm.dtsi      |  4 +--
 3 files changed, 44 insertions(+), 2 deletions(-)
 create mode 100644 arch/arm64/boot/dts/freescale/fsl-imx8mm-evk-drm.dts

diff --git a/arch/arm64/boot/dts/freescale/Makefile b/arch/arm64/boot/dts/freescale/Makefile
index fcbca40..bccda8c 100644
--- a/arch/arm64/boot/dts/freescale/Makefile
+++ b/arch/arm64/boot/dts/freescale/Makefile
@@ -115,6 +115,7 @@ dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += fsl-imx8mq-ddr3l-arm2.dtb \
 				 fsl-imx8mq-evk-dp.dtb \
 				 fsl-imx8mq-evk-edp.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MM) += fsl-imx8mm-evk.dtb \
+				 fsl-imx8mm-evk-drm.dtb \
 				 fsl-imx8mm-evk-ak4497.dtb \
 				 fsl-imx8mm-evk-m4.dtb \
 				 fsl-imx8mm-evk-ak5558.dtb \
diff --git a/arch/arm64/boot/dts/freescale/fsl-imx8mm-evk-drm.dts b/arch/arm64/boot/dts/freescale/fsl-imx8mm-evk-drm.dts
new file mode 100644
index 0000000..b3b84ec
--- /dev/null
+++ b/arch/arm64/boot/dts/freescale/fsl-imx8mm-evk-drm.dts
@@ -0,0 +1,41 @@
